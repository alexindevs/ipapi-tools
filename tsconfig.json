{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "./dist"
  ]
}
